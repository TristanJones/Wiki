<%= form_tag users_path, :method => 'get' do %>
  <div class='search'>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </div>
<% end %>
<h2>Administration Page</h2>
<% @users.each do |user| %>
	<h2><%= link_to user.username, user %></h2>
	<h2>
	<% if user.admin == false %>
	<%= link_to "Make Admin", user, :confirm => "Do you wish to make this user an admin?"
	%>
	<% else %>
	<%= link_to "Remove Admin", user, :confirm => "Do you wish to remove this user as admin?" %>
	<% end %>
	<p>
		<%= link_to "Delete", user, :confirm => "Do you wish to ban this user?", 
		:method => :delete %>
	</p>
	<hr />
<% end %>