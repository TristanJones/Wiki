<h1><%= @page.title %></h1>

<% markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML,
:autolink => true, :space_after_headers => true, :superscript => true,
:tables => true, :fenced_code_blocks  => true, :strikethrough => true) %>

<p><%= markdown.render(@page.content).html_safe %></p>

<small>Date Created: <%= @page.created_at %></small><br />
<small>Last Updated: <%= @page.updated_at %></small>